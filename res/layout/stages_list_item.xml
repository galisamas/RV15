<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background">
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/artists_list_margin"
            android:layout_marginBottom="@dimen/artists_list_margin"
            android:id="@+id/item_image"
            android:src="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

    <ImageView
            android:layout_width="4dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:id="@+id/item_line"
            android:background="@color/basic_stage_indicator"
            android:layout_alignParentLeft="true"/>
    <ImageView
            android:id="@+id/arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/forward_arrow"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_image"
            android:layout_toLeftOf="@id/arrow"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="31dp"
                android:layout_marginTop="-2dp"
                android:text="Artist"
                android:singleLine="true"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/actionbar_second"
                android:id="@+id/item_title"/>
            <TextView
                    android:layout_marginTop="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="19:00 - 20:00"
                    android:textColor="@color/actionbar_second"
                    android:id="@+id/item_time"/>
    </LinearLayout>


</RelativeLayout>